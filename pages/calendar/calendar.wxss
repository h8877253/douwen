/**index.wxss**/
.t_red{
  color: red;
}

.calendar{

  margin: 0 20rpx;
}
.time{
  padding: 16rpx 20rpx;
  display: flex;
  text-align:center;
  border: 1rpx solid #DDDDDD;
}
.time view{
  flex: 1;
  font-size: 36rpx;

}
.time view text{
  font-size: 38rpx;
}
.weekName{
   background-color: #E8E8E8;
  width: 100%;
  display: flex;
  padding: 16rpx 0;
  border:1rpx solid #E8E8E8;
  box-sizing: border-box;
}
.weekName view{
  flex: 1;
  text-align: center;
  font-size: 32rpx;
}
.sunday,.saturday{
  color: #333;
}
.week{
  width: 100%;
  border:1rpx solid #DDDDDD;
  box-sizing: border-box;
}
.week view{
  width: 14.2%;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  margin: 20rpx 0;
  text-align: center;
}
.week view text{
  width: 100%;
  height: 100%;
font-size:24rpx;
font-weight:300;
  display: inline-block;
  line-height: 40rpx;
}
.week view>text{
  font-size:24rpx
}
.calendarSign{
  margin: 20rpx;
  height: 100rpx;line-height: 100rpx;
  border-radius: 50rpx;
  text-align: center;
}
.time-before{color:#52b8f5; }
.btn-bgon{background:#4585C5;color: #FFF;height: 100rpx;line-height: 100rpx;border-radius: 50rpx;border:1rpx solid #4585C5;}
.btn-bgoff{background:none;color: #999;height: 100rpx;line-height: 100rpx;border-radius: 50rpx;border:1rpx solid #E8E8E8;
border-top:0;
border-bottom:0;
box-sizing:border-box;
}