      <icon class='iconfont icon-ziyuanbaosongshenqingshujuxiugai'></icon>编辑</view>
    <view class='share' bindtap='quotesshareshow'>
      <icon class='iconfont icon-iconfontfenxiang2'></icon>
    </view>
  </view>
</view>
