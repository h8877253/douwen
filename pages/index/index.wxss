/**index.wxss**/
.details-img{width: 100%;height: 500rpx;}
.details-img image{width: 100%;height: 500rpx;}
.details-text{width: 100%;padding: 40rpx 60rpx;box-sizing: border-box;}
.details-text view{font-size: 36rpx;color: #C6C6C6;text-align: center;height: 60rpx;font-weight: 400;}
.details-text text{font-size: 32rpx;color: #666;}
.editorinfo{box-sizing: border-box;padding: 20rpx 40rpx;width: 100%;}
.editorinfo view{display: inline-block;}
.editorinfo .editorinfo-head{float: left;}
.editorinfo-head image{width: 80rpx;height: 80rpx;border-radius: 10rpx;margin: 0  20rpx;}
.editorinfo-head text{display: inline-block;height: 80rpx;line-height: 80rpx;font-size: 32rpx;color: #333;}
.editorinfo .editorbtn{float: right;padding: 0 30rpx 0 20rpx;height: 80rpx;line-height: 80rpx;border-radius: 40rpx;border:1px solid #4585C5;text-align: center;color: #4585C5;}
.editorinfo .editorbtn .iconfont{font-size: 40rpx;color: #4585C5;width: 60rpx;}
.editorinfo .share{float: right;height: 80rpx;line-height: 80rpx;width: 100rpx;text-align: center;}
.editorinfo .share .iconfont{font-size: 40rpx;color: #B0B0B0;}
.editorinfo .editorinfo-head text{height: 80rpx;line-height: 80rpx;display: inline-block;vertical-align:15px;

}
.quotesshareisshow{display: none;}
.sharemask{width: 100%;height: 100%;background: rgba(0, 0, 0,0.4);position: fixed;top: 0;left: 0;text-align: center;  align-items: center;
  justify-content: center;line-height: 100%;}
.sharemask-con{width: 520rpx;background: #FFF;margin: auto;margin-top: 350rpx;border-radius: 10rpx;padding:20rpx 0;}
.sharemask-title{font-size: 40rpx;color: #333;height: 100rpx;line-height: 80rpx;font-weight: 500;}
.share-weixin,.share-friend{width:180rpx;height: 200rpx;display: inline-block;color: #999;font-size: 32rpx;}
.share-weixin image,.share-friend image{width:150rpx;height: 150rpx;margin: 0 auto;display: block;margin-bottom: 20rpx;}
.quotessharehide{background: #FFF;border-top: 1px solid #E5E5E5;height: 80rpx;line-height: 100rpx;border-radius: 0;margin-top: 40rpx;color: #4585C5;font-size: 36rpx;}
.quotessharehide::after{
  border: 0;
}